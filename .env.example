# S3Proxy Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_ID=true
ENABLE_ACCESS_LOG=true

# Storage Provider Configuration
STORAGE_PROVIDER=s3  # Options: s3, azure, filesystem

# S3 Storage Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_USE_PATH_STYLE=false
S3_DISABLE_SSL=false

# Azure Storage Configuration
AZURE_ACCOUNT_NAME=your-account-name
AZURE_ACCOUNT_KEY=your-account-key
AZURE_SAS_TOKEN=your-sas-token
AZURE_CONTAINER_NAME=your-container-name
AZURE_ENDPOINT=

# Filesystem Storage Configuration
FILESYSTEM_ROOT_PATH=/data

# Authentication Configuration
AUTH_TYPE=basic  # Options: none, basic, bearer
AUTH_IDENTITY=admin
AUTH_CREDENTIAL=your-password

# AWS Credentials (for S3 API compatibility)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Performance Configuration
CACHE_ENABLED=true
CACHE_SIZE_MB=100
CACHE_TTL=300
MAX_UPLOAD_SIZE=5368709120  # 5GB
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_PATH=/health
READINESS_PATH=/ready

# TLS Configuration
TLS_ENABLED=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Proxy Configuration
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
MAX_HEADER_BYTES=1048576
