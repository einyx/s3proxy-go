# S3Proxy Environment Variables Template
# Copy this file to .env and fill in your actual values

# Authentication Credentials
AUTH_IDENTITY=your-auth-identity
AUTH_CREDENTIAL=your-auth-credential

# AWS Credentials (if using S3 backend)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_IAM_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/your-role

# Azure Credentials (if using Azure backend)
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=your-container-name

# ECR Registry (for Kubernetes deployments)
ECR_REGISTRY=ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com

# Encryption Keys (if using encryption)
ENCRYPTION_LOCAL_MASTER_KEY=your-base64-encoded-32-byte-key
ENCRYPTION_KMS_KEY_ID=your-kms-key-id

# AWS ECS/Fargate Configuration
AWS_TASK_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/your-task-role
AWS_EXECUTION_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole
AWS_SECRET_ARN=arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:your-secret

# S3Proxy Access Keys (for clients)
S3PROXY_ACCESS_KEY=your-proxy-access-key
S3PROXY_SECRET_KEY=your-proxy-secret-key

# Partner AWS Credentials (if using multi-account setup)
PARTNER_AWS_ACCESS_KEY=partner-access-key
PARTNER_AWS_SECRET_KEY=partner-secret-key
